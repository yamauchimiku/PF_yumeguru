<% if @model == 'user' %>
  <h3>"<%= @content %>"の検索結果</h3>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>名前</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(post_image.user) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 60, 60 %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(post_image.user) do %>
            <%= user.name%>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else @model == 'post_image' %>
  <h3>"<%= @content %>"の検索結果</h3>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>温泉名</th>
        <th>コメント</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <% @post_images.each do |post_image| %>
        <tr>
          <td>
            <%= link_to post_image_path(post_image.id) do %>
              <%= attachment_image_tag post_image, :image %>
            <% end %>
          </td>
          <td>
            <%= link_to post_image_path(post_image.id) do %>
              <%= post_image.post_name %>
            <% end %>
          </td>
          <td><%= post_image.caption %></td>
        </tr>
        <% end %>
      </tbody>
  </table>
<% end %>