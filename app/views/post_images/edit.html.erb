<div class="container">
  <h2>➡ POST UPDATE</h2>
  <p>投稿を更新しよう。</p>
    <h3>投稿編集フォーム</h3>
      <%= form_with model: @post_image, local:true do |f| %>
        <h5>画像を選択</h5>
        <!--idを除いた名前を指定-->
        <%= f.attachment_field :image %>
        <h5>温泉名</h5>
        <%= f.text_field :post_name %>
        <h5>コメント</h5>
        <%= f.text_area :caption %></br>
        <%= f.submit 'UPDATE' %>
      <% end %>
</div>