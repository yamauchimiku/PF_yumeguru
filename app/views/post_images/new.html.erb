<div class="container text-center mb-5">
    <div class="row text-center">
      <div class="col-lg-3"></div>
      <div class="col-lg-6 border border-info rounded bg-light">
        </br>
        <h1>画像投稿フォーム</h1></br>
        </br>
        </br>
          <%= form_with model: @post_image, local:true do |f| %>
            <!--idを除いた名前を指定-->
