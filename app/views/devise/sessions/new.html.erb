<div class="container text-center my-5">
<h1>LOG IN</h1></br>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="field">
    <div class="fas fa-envelope fa-lg fa-border text-info"></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div></br>

  <div class="field">
    <div class="fas fa-lock fa-lg fa-border text-secondary"></div>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div></br>

  <% if devise_mapping.rememberable? %>
    <div class="field text-secondary">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mt-5">
    <%= f.submit "LOG IN",class: "bg-secondary text-white btn radius-pixel-30" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
