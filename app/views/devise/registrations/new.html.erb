<div class="container text-center my-5">
  <div class="form-body">
  <h1>SIGN UP</h1></br>

  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="fas fa-user-circle fa-lg fa-border text-secondary"></div>
      <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
    </div></br>

    <div class="field">
      <div class="fas fa-envelope fa-lg fa-border text-info"></div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div></br>

    <div class="field">
      <div class="fas fa-lock fa-lg fa-border text-secondary"></div>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6characters)"%>
    </div></br>

    <div class="field">
      <div class="fas fa-check-circle fa-lg fa-border text-danger"></div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation"%>
    </div></br>

    <div class="actions mt-5">
      <%= f.submit "SIGN UP",class: "bg-secondary text-white" %>
    </div>
  <% end %>

  </div>
</div>
