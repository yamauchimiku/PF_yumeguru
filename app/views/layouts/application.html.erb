<!DOCTYPE html>
<html>
  <head>
    <title>PfYumeguru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand" href="/">YUMEGURU</a>
        <!--jQuery idを指定-->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!--idを付与-->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "HOME", post_images_path,class:"nav-link active" %>
              </li>
              <li class="nav-item">
                <%= link_to "NEW POST", new_post_image_path,class:"nav-link active" %>
              </li>
              <li class="nav-item">
                <%= link_to "MY PAGE", user_path(current_user.id),class:"nav-link active" %>
              </li>
              <li class="nav-item">
                <%= link_to "LOG OUT", destroy_user_session_path, method: :delete, class:"nav-link active" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "SIGN UP", new_user_registration_path, class:"nav-link active" %>
              </li>
              <li class="nav-item">
                <%= link_to "LOG IN", new_user_session_path, class:"nav-link active" %>
              </li>
              <li class="nav-item">
                <%= link_to "ABOUT", about_path, class:"nav-link active" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <main>
    <%= yield %>
  </main>
  <footer>
    <div class="container mt-5">
  	  <div class="row">
  	    <!--要素の中央寄せ-->
    	  <div class="mx-auto">
    		<p>YUMEGURU.SNS</p>
    	  </div>
      </div>
    </div>
  </footer>
  </body>
</html>